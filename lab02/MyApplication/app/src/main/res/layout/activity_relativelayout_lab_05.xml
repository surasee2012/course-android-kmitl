        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="#ffd000"
        android:gravity="center"
        android:text="Hello" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
